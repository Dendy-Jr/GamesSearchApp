<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?colorSurface"
    app:strokeColor="?colorOnSurface"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D5198">

        <ImageView
            android:id="@+id/thumbnail_favorite"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_favorite"
            tools:background="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/title_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_8dp"
            android:layout_marginTop="@dimen/margin_top_8dp"
            android:layout_marginEnd="@dimen/margin_end_8dp"
            android:layout_marginBottom="@dimen/margin_bottom_8dp"
            android:background="#FFCCE7"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:textColor="#26495c"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/thumbnail_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lineage 2" />

        <TextView
            android:id="@+id/platform_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_8dp"
            android:layout_marginTop="@dimen/margin_top_8dp"
            android:fontFamily="@font/amarante"
            android:text="@string/platform_lower"
            android:textColor="#81B7D2"
            app:layout_constraintStart_toEndOf="@id/thumbnail_favorite"
            app:layout_constraintTop_toBottomOf="@id/title_favorite" />

        <TextView
            android:id="@+id/platform_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_8dp"
            android:fontFamily="@font/amarante"
            android:textColor="#daf2dc"
            app:layout_constraintStart_toEndOf="@id/platform_tools"
            app:layout_constraintTop_toTopOf="@id/platform_tools"
            tools:text="PC (Windows)" />

        <TextView
            android:id="@+id/developer_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_8dp"
            android:fontFamily="@font/amarante"
            android:text="@string/developer_lower"
            android:textColor="#81B7D2"
            app:layout_constraintStart_toStartOf="@id/platform_tools"
            app:layout_constraintTop_toBottomOf="@id/platform_tools" />

        <TextView
            android:id="@+id/developer_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_8dp"
            android:layout_marginEnd="@dimen/margin_end_8dp"
            android:fontFamily="@font/amarante"
            android:textColor="#daf2dc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/developer_tools"
            app:layout_constraintTop_toTopOf="@id/developer_tools"
            tools:text="Nvius" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>